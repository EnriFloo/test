@model List<AutoveloxTest.Models.Mappa>

@{
    ViewData["Title"] = "Autovelox in Italia";
}

<h2>Ricerca Autovelox</h2>

<form method="get" class="mb-4">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label>Regione</label>
            <input type="text" name="regione" class="form-control" value="@ViewBag.Regione" />
        </div>
        <div class="col-auto">
            <label>Provincia</label>
            <input type="text" name="provincia" class="form-control" value="@ViewBag.Provincia" />
        </div>
        <div class="col-auto">
            <label>Comune</label>
            <input type="text" name="comune" class="form-control" value="@ViewBag.Comune" />
        </div>
        <div class="col-auto mt-4">
            <button type="submit" class="btn btn-primary">Cerca</button>
            <a href="/Mappa" class="btn btn-secondary">Azzera</a>
        </div>
    </div>
</form>

<h2>Elenco Autovelox</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Comune</th>
            <th>Provincia</th>
            <th>Regione</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdComuneNavigation?.Denominazione</td>
                <td>@item.IdComuneNavigation?.IdProvinciaNavigation?.Denominazione</td>
                <td>@item.IdComuneNavigation?.IdProvinciaNavigation?.IdRegioneNavigation?.Denominazione</td>
                <td>
                    <a href="@Url.Action("Dettaglio", "Mappa", new { id = item.Id })" class="btn btn-info btn-sm">Dettaglio</a>
                </td>
            </tr>
        }
    </tbody>
</table>
